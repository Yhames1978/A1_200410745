@model IEnumerable<A1_200410745.Models.PetFood>

@{
    ViewData["Title"] = "Index";
}
    <head>
        <style>
            .petfood {
                display: block;
                margin-left: auto;
                margin-right: auto;
                width: 30%;
            }
        </style>
    </head>

<h2>Index</h2>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Price)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NutritionalInformation)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Weight)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Brand)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PetFoodAnimal)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Price)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NutritionalInformation)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Weight)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Brand)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PetFoodAnimal.Name)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.PetFoodId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.PetFoodId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.PetFoodId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
<p>
    <img src="~/images/petfood.jpg" alt="Petfood" class="petfood" />

</p>
